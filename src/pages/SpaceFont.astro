---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import HeroAlt from "../components/HeroAlt.astro";
import HeroAltWithImage from "../components/HeroAltWithImage.astro";
import Social from "../components/Social.astro";
import Signature from "../components/Signature.astro";
import SignatureWithImage from "../components/SignatureWithImage.astro";
import ImageGlitchAlt from "../components/ImageGlitchAlt.astro";
import ImageGlitchAlt2 from "../components/ImageGlitchAlt2.astro";
import ImageGlitchAlt3 from "../components/ImageGlitchAlt3.astro";
import YoutubeShortEmbeded from "../components/YoutubeShortEmbededAlt.astro";
import SpotifyEmbeded from "../components/SpotifyEmbeded.astro";
import GlitchImageNew from "../components/GlitchImageNew.astro";
import TextBlock from "../components/TextBlockAltSpace.astro";
import Footer from "../components/Footer.astro";

// Astro component
---

<Layout>
    <div class="container">
        <Navbar class="navbar blur-in" />
        <div class="hero blur-in">
            <HeroAltWithImage />
        </div>
        <div class="social blur-in">
            <Social />
        </div>
        <div class="grid">
            <div class="row">
                <div class="main blur-in">
                    <h1>Lo último</h1>
                    <YoutubeShortEmbeded />
                </div>
                <div class="secondary fade-in">
                    <ImageGlitchAlt2 />
                </div>
            </div>
            <div class="row">
                <div class="secondary altBorderColor fade-in">
                    <ImageGlitchAlt />
                </div>
                <div class="main altBackgroundColor blur-in">
                    <h1>Escucha</h1>
                    <SpotifyEmbeded />
                </div>
            </div>
            <div class="row-text">
                <div class="main-text blur-in">
                    <h1>Bio</h1>
                    <TextBlock />
                </div>
                <div class="secondary-text fade-in">
                    <ImageGlitchAlt3 />
                </div>
            </div>
        </div>
        <div class="social-container blur-in">
            <h1>
                Para estar mÁs conectado con el dÍa a dÍa de Ocaso IlusiÓn,
                sÍguenos en las redes sociales:
            </h1>
            <Social />
        </div>
        <div class="signature-container blur-in">
            <SignatureWithImage />
        </div>
        <Footer />
    </div>
    <style>
        body {
            width: 100%;

            margin: 0;
        }

        .container {
            height: 100%;
            min-height: 200vh;
        }

        .navbar {
            display: none;
        }

        .hero {
            height: 40vh;
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
            overflow: hidden; /* Prevents any overflow */
        }

        .social {
            width: 100%;
            height: 5vh;
        }

        .social-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #e8baba;
        }

        .grid {
            display: flex;
            flex-direction: column;
            margin-bottom: 10vh;
        }

        .row {
            display: flex;
            flex-direction: row;
            height: 50vh;

            align-items: stretch;
            margin-bottom: 5rem;
        }
        .row-text {
            display: flex;
            flex-direction: row;
            height: auto;

            align-items: stretch;
        }

        .main {
            display: flex;
            flex-direction: column;
            height: 100%;
            background-color: pink;
            border: solid 3px pink;
            flex-basis: 66.66%; /* Takes up two-thirds of the space */
            flex-grow: 1; /* Allows it to grow if there's extra space */
            padding: 1rem;
            border-radius: 1%;
            margin: 1rem;
            color: #000;
            min-width: 300px;
            min-height: 50vh;
        }

        .main-text {
            display: flex;
            flex-direction: column;
            background-color: pink;
            border: solid 3px pink;
            flex-basis: 66.66%; /* Takes up two-thirds of the space */
            flex-grow: 1; /* Allows it to grow if there's extra space */
            padding: 1rem;
            border-radius: 1%;
            margin: 1rem;
            color: #000;
            min-width: 300px;
            /* min-height: 50vh; */
            height: auto;
        }
        .secondary {
            display: flex;
            flex-direction: column;
            height: 100%;
            overflow: hidden;
            flex-basis: 33.33%; /* Takes up one-third of the space */

            padding-top: 1rem;
            padding-bottom: 1rem;
            margin: 1rem;
            border-radius: 1%;
            border: solid 3px #6da098;
            justify-content: center;
            color: #000;
        }
        .secondary-text {
            display: flex;
            flex-direction: column;
            height: 50vh;
            overflow: hidden;
            flex-basis: 33.33%; /* Takes up one-third of the space */

            padding-top: 1rem;
            padding-bottom: 1rem;
            margin: 1rem;
            border-radius: 1%;
            border: solid 3px #6da098;
            justify-content: center;
            color: #000;
        }

        .signature-container {
            display: flex;
            padding-top: 5rem;
            height: 50vh;
            width: 100%;
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
            overflow: hidden; /* Prevents any overflow */
        }

        .altBackgroundColor {
            background-color: #6da098;
            border: solid 3px #6da098;
        }

        .altBorderColor {
            border: solid 3px pink;
        }
        /* Responsive */
        @media (max-width: 1024px) {
        }

        @media (max-width: 1180px) {
            .secondary-text {
                display: none;
            }

            .social-container {
                margin: 0 2rem;
            }
        }

        @media (max-width: 768px) {
            .secondary {
                display: none;
            }

            .signature h1 {
                font-size: 3rem;
            }

            .social-container {
                margin: 0 2rem;
            }

            .signature-container {
                padding-top: 0rem;
            }
        }

        @media (max-width: 480px) {
            .signature h1 {
                font-size: 3rem;
            }

            .main-text {
                height: auto;
            }

            .social-container {
                margin: 0 2rem;
            }
            .signature-container {
                padding-top: 0rem;
            }
        }
        /* Animation */
        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition:
                opacity 3s ease-out,
                transform 0.6s ease-out;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .blur-in {
            filter: blur(10px);
            opacity: 0;
            transition:
                filter 0.6s ease-out,
                opacity 0.6s ease-out;
        }

        .blur-in.visible {
            filter: blur(0);
            opacity: 1;
        }
    </style>
    <script>
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("visible");
                } else {
                    entry.target.classList.remove("visible");
                }
            });
        });

        document
            .querySelectorAll(".fade-in")
            .forEach((el) => observer.observe(el));

        document
            .querySelectorAll(".blur-in")
            .forEach((el) => observer.observe(el));
    </script>
</Layout>
