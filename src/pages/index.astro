---
import Layout from "../layouts/Layout.astro";
import HeroAlt from "../components/HeroAlt.astro";
import Social from "../components/Social.astro";
import Signature from "../components/Signature.astro";
import ImageGlitchAlt from "../components/ImageGlitchAlt.astro";
import ImageGlitchAlt2 from "../components/ImageGlitchAlt2.astro";
import YoutubeShortEmbeded from "../components/YoutubeShortEmbededAlt.astro";
import SpotifyEmbeded from "../components/SpotifyEmbeded.astro";
import GlitchImageNew from "../components/GlitchImageNew.astro";
import Footer from "../components/Footer.astro";

// Astro component
---

<Layout>
    <div class="container">
        <div class="hero">
            <HeroAlt />
        </div>
        <div class="social">
            <Social />
        </div>
        <div class="grid">
            <div class="row">
                <div class="main">
                    <h1>Lo Ãºltimo</h1>
                    <YoutubeShortEmbeded />
                </div>
                <div class="secondary">
                    <ImageGlitchAlt2 />
                </div>
            </div>
            <div class="row">
                <div class="secondary altBorderColor">
                    <ImageGlitchAlt />
                </div>
                <div class="main altBackgroundColor">
                    <h1>Escucha</h1>
                    <SpotifyEmbeded />
                </div>
            </div>
        </div>
        <div class="social-container">
            <h1>Siguenos/Contacto:</h1>
            <Social />
        </div>
        <div class="signature-container">
            <Signature />
        </div>
        <Footer />
    </div>
</Layout>
<style>
    body {
        width: 100%;
        margin: 0;
    }

    .hero {
        height: 45vh;
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        overflow: hidden; /* Prevents any overflow */
    }

    .social {
        width: 100%;
        height: 5vh;
    }

    .social-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #d6a397;
        font-size: 3vh;
    }

    .grid {
        display: flex;
        flex-direction: column;
        margin-bottom: 10vh;
    }

    .row {
        display: flex;
        flex-direction: row;
        height: 50vh;

        align-items: stretch;
        margin-bottom: 5rem;
    }

    .main {
        display: flex;
        flex-direction: column;
        height: 100%;
        background-color: pink;
        border: solid 3px pink;
        flex-basis: 66.66%; /* Takes up two-thirds of the space */
        flex-grow: 1; /* Allows it to grow if there's extra space */
        padding: 1rem;
        border-radius: 1%;
        margin: 1rem;
        color: #000;
    }

    .secondary {
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow: hidden;
        flex-basis: 33.33%; /* Takes up one-third of the space */
        padding: 1rem;
        margin: 1rem;
        border-radius: 1%;
        border: solid 3px #6da098;
        justify-content: center;
        color: #000;
    }

    .signature-container {
        height: 45vh;
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        overflow: hidden; /* Prevents any overflow */
    }

    .altBackgroundColor {
        background-color: #6da098;
        border: solid 3px #6da098;
    }

    .altBorderColor {
        border: solid 3px pink;
    }
    /* Responsive */
    @media (max-width: 1024px) {
    }

    @media (max-width: 768px) {
        .secondary {
            display: none;
        }

        .signature h1 {
            font-size: 3rem;
        }
    }

    @media (max-width: 480px) {
        .signature h1 {
            font-size: 3rem;
        }
    }
</style>
